<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">
	<LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="100dp" 
    	android:background="#1223cd"
    	android:padding="5dp"
    	android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ImageButton11"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_gravity="center"       
            android:onClick="funHome"     
            android:src="@drawable/home"/>

        <TextView
            android:id="@+id/tvTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="18dip"
            android:shadowDx="5"
            android:shadowDy="5"           
            android:shadowRadius="5"
            android:shadowColor="#a72cda"
            android:lineSpacingExtra="5dp"
            android:textColor="#fff"
            android:text="@string/app_name" />
        	
         <ImageButton
            android:id="@+id/ImageButton11"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_gravity="center"           
            android:onClick="funHome" 
            android:src="@drawable/home"/>
    </LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    android:layout_weight="1"
	    >
         <EditText
              android:id="@+id/txtSearch1"
              android:layout_width="match_parent"
	    	  android:layout_height="wrap_content"
             />
         <ListView 
              android:id="@+id/lstANY"
              android:layout_width="match_parent"
	    	  android:layout_height="wrap_content"
             ></ListView>
	</LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    android:layout_weight="0"
	    android:background="#000"
	    >
         <TextView 
            android:id="@+id/tvProgrammer1"
            android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:gravity="center"
	    	android:textColor="#fff"
	    	android:onClick="funBluePhoenix"
	    	android:text="Programmer@ Dr.Aung Win Htut"
             />
	</LinearLayout>

</LinearLayout>
