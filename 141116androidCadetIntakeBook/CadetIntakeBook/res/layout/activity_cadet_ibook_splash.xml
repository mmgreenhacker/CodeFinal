<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0b3b0b"
    android:orientation="vertical" >    
  

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"         
            android:textColor="#1323ec"   
            android:shadowDx="5"
            android:shadowDy="5"           
            android:shadowRadius="5"
            android:shadowColor="#a72cda"
            android:lineSpacingExtra="5dp"
            android:text="Defense Services Technological Academy"
            android:textSize= "24dip"/>

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"        
            android:layout_marginTop="20dp"      
            android:layout_gravity="center"
            android:src="@drawable/dsta" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#1323ec"   
            android:shadowDx="5"
            android:shadowDy="5"           
            android:shadowRadius="5"
            android:shadowColor="#a72cda"
            android:lineSpacingExtra="5dp"
            android:layout_weight="0.07"
            android:text="D.S.T.A 18th Intake"
            android:textAppearance="?android:attr/textAppearanceLarge" />
         <LinearLayout 
             android:layout_width="match_parent"
    		 android:layout_height="wrap_content"
    		 android:orientation="vertical" 
             >
             <EditText 
                 android:id="@+id/etPassword"
                 android:layout_width="match_parent"
    		 	android:layout_height="wrap_content"
    		 	android:hint="Enter Password"
    		 	android:inputType="textPassword"    		 	
                 />
             <Button 
                 android:id="@+id/btnPassword"
                 android:layout_width="match_parent"
    		 	android:layout_height="wrap_content"
    		 	android:text="Login"
    		 	android:onClick="funLogin"
                 />
             
         </LinearLayout>
</LinearLayout>
    


