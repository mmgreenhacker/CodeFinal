                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CadetIBookMainActivity"
            android:label="@string/title_activity_cadet_ibook_main" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.engineer4myanmar.intakebook.CadetIBookSplashActivity" />
        </activity>
        <activity
            android:name=".CadetIBookANYActivity"
            android:label="@string/title_activity_cadet_ibook_any" >
